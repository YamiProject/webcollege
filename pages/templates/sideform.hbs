<div id="side-form">
    <div class="w-100 mx-0 row justify-content-center align-content-start align-items-start">
        <div class="w-100 mx-0 h-75 row justify-content-center pt-3">
            <div class="w-100 mb-3">
                <button class="close-sideform btn" disabled>&gt;&gt;&gt;</button>
            </div>
            <div class="w-100">
                {{#equal form 't-announce'}}
                    <div class="px-3">
                        <h3 class="text-center">Создать объявление</h3>
                    </div>
                    <form class="row w-100 justify-content-center h-100 align-items-center align-content-center mx-0 px-3" id="anouncement-form">
                        <div class="w-100 row justify-content-center">
                            <input type="text" id="anouncement-form-head" class="form-control m-1" placeholder="Заголовок...">
                            <select type="text" id="anouncement-form-type" class="form-control m-1" placeholder="Тема..">
                                <option value="" hidden>Тема...</option>
                            {{#each ../announcement_type}}
                                <option value="{{announcement_type_id}}">{{announcement_type_name}}</option>
                            {{/each}}
                            </select>
                            <input type="file" id="anouncement-form-file" class="form-control-file m-1 text-light" accept=".rar,.zip,.doc,.docx,.xml,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,.png,.jpg,.jpeg" >
                        </div>
                        <div class="w-100 row align-content-center justify-content-center">
                            <textarea class="w-100" id="anouncement-form-text"></textarea>
                            <button class="w-100 announcement-form-button btn">+</button>
                        </div>
                    </form>
                {{/equal}}
                {{#equal form 't-achievements'}}
                    <div class="px-3 mb-n2">
                        <h3 class="text-center">Добавить</h3>
                    </div>
                    <form class="row w-100 justify-content-center h-100 align-items-center align-content-center mx-0 px-3" id="t-achievements-form">
                        <div class="w-100 row justify-content-center align-content-center align-items-center" id="t-achievements-form-img-block">
                            <img id="t-achievements-form-img"></img>
                        </div>
                        <div class="w-100">
                            <input type="text" class="form-control" placeholder="Название..." id="t-achievements-form-name">
                        </div>
                        <div class="w-100">
                            <input type="file" class="form-control-file" id="t-achievements-form-file" onchange="document.getElementById('t-achievements-form-img').src = window.URL.createObjectURL(this.files[0])">
                        </div>
                        <div class="w-100">
                            <button class="btn w-100 t-achievements-form-button">+</button>
                        </div>
                    </form>
                {{/equal}}
                {{#equal form 't-events'}}
                    <div class="px-3">
                        <h3 class="text-center">Запланировать мероприятие</h3>
                    </div>
                    <form class="row w-100 justify-content-center h-100 align-items-center align-content-center mx-0 px-3" id="t-event-form">
                        <div class="w-100 row justify-content-center">
                            <label for="t-event-form-select">Тип мероприятия</label>
                            <select class="form-control" id="t-event-form-select">
                                <option value="" disabled selected></option>
                                {{#each ../event_types}}
                                    <option value="{{event_type_id}}">{{event_type_name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="w-100 row justify-content-center">
                            <label class="text-light" for="t-event-form-date">Дата проведения</label>
                            <input type="date" class="form-control" id="t-event-form-date">
                        </div>
                        <div class="w-100 row align-content-center justify-content-center">
                            <label for="t-event-form-textarea">Информация</label>
                            <textarea class="form-control" id="t-event-form-textarea"></textarea>
                        </div>
                        <div class="w-100">
                            <button class="btn w-100 t-event-form-button">+</button>
                        </div>
                    </form>
                {{/equal}}
                {{#equal form 't-iw'}}
                    <div class="px-3 mb-n2">
                        <h3 class="text-center">Назначить</h3>
                    </div>
                    <form class="row w-100 justify-content-center align-items-start align-content-start mx-0 px-3" id="t-iw-form">
                        <div class="w-100">
                            <label for="">Выберите студента:</label>
                            <select class="form-control" id="t-iw-form-student">
                                <option value="" disabled selected></option>
                                {{#each ../students}}
                                    <option value="{{student_id}}">{{user_sur_name}} {{user_name}} {{user_mid_name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="w-100">
                            <label for="">Выберите тип работы:</label>
                            <select class="form-control" id="t-iw-form-type">
                                <option value="" disabled selected></option>
                                {{#each ../iw_type}}
                                    <option value="{{iw_type_id}}">{{iw_type_name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="w-100">
                            <label for="">Выберите дату проведения работы:</label>
                            <input type="date" class="form-control" id="t-iw-form-date">
                        </div>
                        <div class="w-100">
                            <label for="">Опишите причину:</label>
                            <textarea class="form-control" id="t-iw-form-reasone" cols="30" rows="10"></textarea>
                        </div>
                        <div class="w-100">
                            <button class="btn w-100 t-iw-form-button">+</button>
                        </div>
                    </form>
                {{/equal}}
                {{#equal form 't-gallery'}}
                    <div class="px-3 mb-n2">
                        <h3 class="text-center">Загрузить</h3>
                    </div>
                    <form class="row w-100 justify-content-center align-items-start align-content-start mx-0 px-3" id="t-gallery-form">
                        <div class="w-100">
                            <input type="file" class="form-control-file" id="t-gallery-form-file" multiple accept=".png,.jpg">
                        </div>
                        <div class="w-100">
                            <button class="btn w-100" id="t-gallery-form-button">+</button>
                        </div>
                    </form>
                {{/equal}}
            </div>
        </div>
    </div>
</div>