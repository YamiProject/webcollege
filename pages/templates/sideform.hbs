<div id="side-form">
    <div class="w-100 mx-0 row justify-content-center align-content-start align-items-start">
        <div class="w-100 mx-0 h-75 row justify-content-center pt-3">
            <div class="w-100 mb-3">
                <button class="close-sideform btn" disabled>&gt;&gt;&gt;</button>
            </div>
            <div class="w-100">
                {{#equal form 'c-announce'}}
                    <div class="px-3">
                        <h3 class="text-center">Создать объявление</h3>
                    </div>
                    <form class="row w-100 justify-content-center h-100 align-items-center align-content-center mx-0 px-3" id="anouncement-form">
                        <div class="w-100 row justify-content-center">
                            <input type="text" id="anouncement-form-head" class="form-control m-1" placeholder="Заголовок...">
                            <select type="text" id="anouncement-form-type" class="form-control m-1" placeholder="Тема">
                                <option value="" hidden>Тема...</option>
                            {{#each ../announcement_type}}
                                <option value="{{announcement_type_id}}">{{announcement_type_name}}</option>
                            {{/each}}
                            </select>
                            <input type="file" id="anouncement-form-file" class="form-control-file m-1 text-light">
                        </div>
                        <div class="w-100 row align-content-center justify-content-center">
                            <textarea class="w-100" id="anouncement-form-text"></textarea>
                            <button class="w-100 announcement-form-button btn" id="anouncement-form-sumbit">+</button>
                        </div>
                    </form>
                {{/equal}}
            </div>
        </div>
    </div>
</div>